<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="top.thegodisgad.tag.mapper.CommodityTagMapper">

    <resultMap id="BaseResultMap" type="top.thegodisgad.tag.entity.CommodityTag">
            <id property="id" column="id" jdbcType="BIGINT"/>
            <result property="gmtCreate" column="gmt_create" jdbcType="TIMESTAMP"/>
            <result property="gmtModified" column="gmt_modified" jdbcType="TIMESTAMP"/>
            <result property="commodityId" column="commodity_id" jdbcType="BIGINT"/>
            <result property="tagId" column="tag_id" jdbcType="BIGINT"/>
            <result property="isValid" column="is_valid" jdbcType="TINYINT"/>
    </resultMap>

    <sql id="Base_Column_List">
        id,gmt_create,gmt_modified,
        commodity_id,tag_id,is_valid
    </sql>
    <insert id="insert" parameterType="top.thegodisgad.tag.entity.CommodityTag">
        insert into tb_commodity_tag(commodity_id,tag_id) values(#{commodityId},#{tagId})
    </insert>
    <select id="selectByCommodityId" resultType="top.thegodisgad.tag.entity.CommodityTag">
        select <include refid="Base_Column_List"/>
        from tb_commodity_tag
        where commodity_id=#{commodityId} and is_valid=1
    </select>
    <select id="selectByTagId" resultType="top.thegodisgad.tag.entity.CommodityTag">
        select <include refid="Base_Column_List"/>
        from tb_commodity_tag
        where tag_id=#{tagId} and is_valid=1
    </select>
    <update id="delete">
        update tb_commodity_tag
        set is_valid=0
        where commodity_id=#{commodityId} and tag_id=#{tagId}
    </update>
</mapper>
